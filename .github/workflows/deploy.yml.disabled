name: Auto-Deploy Vite App to EC2

on:
  push:
    branches:
      - main

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v3

    - name: Set up SSH
      uses: webfactory/ssh-agent@v0.7.0
      with:
        ssh-private-key: ${{ secrets.EC2_SSH_KEY }}

    - name: Deploy to EC2 and Restart App
      run: |
        ssh -o StrictHostKeyChecking=no ubuntu@ec2-47-130-55-18.ap-southeast-1.compute.amazonaws.com << 'EOF'
          cd /workgroup/businessdoctor_reactfrontend || exit 1
          git pull origin main
          npm install
          npm run build
          pm2 restart react_client_app || pm2 start serve --name react_client_app -- -s dist
          pm2 save
        EOF
